@model User;
<div class="container">
    <a class="float-right" href="/login">Already Registered?</a>
    <div class="col-5">
        <h1 class="text-center">Register</h1>
        <form class="form-group" asp-action="Register" asp-controller="Home" method="POST">
            
                
            <span asp-validation-for="FirstName"></span>
                First Name<input class="form-control" asp-for="FirstName">
                <span asp-validation-for="LastName"></span>
                Last Name<input class="form-control" asp-for="LastName">
                <span asp-validation-for="Email"></span>
                Email Address<input class="form-control" asp-for="Email">
                
                
                    
                <span asp-validation-for="Password"></span>
                Password<input class="form-control" asp-for="Password">
                <span asp-validation-for="Confirm"></span>
                Password Confirmation<input class="form-control" asp-for="Confirm">
                <button style="margin-top: 20px;" class="btn btn-success" type="submit">Submit</button>
                    
            
        </form>
    </div>

</div>